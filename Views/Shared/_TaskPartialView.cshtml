@model TaskManagementSystem.Models.ShowTaskViewModel



<div class="d-flex text-body-secondary pt-3">
    <svg class="bd-placeholder-img flex-shrink-0 me-2 rounded" width="32" height="32" focusable="false">
        <title>@Model.TaskId</title>
        <rect width="100%" height="100%" fill="@(Model.randomColour)" />
    </svg>
    <p class="pb-3 mb-0 small lh-sm border-bottom">
        <strong class="d-block text-gray-dark">
            @Model.Title
            @if (Model.PriorityName == "Low")
            {
                <span class="badge rounded-pill bg-success">@Model.PriorityName</span>
            }
            else if (Model.PriorityName == "Medium")
            {
                <span class="badge rounded-pill bg-warning">@Model.PriorityName</span>

            }else{
                <span class="badge rounded-pill bg-danger">@Model.PriorityName</span>
            }

            @if (Model.StatusName == "Completed")
            {
                <span class="badge rounded-pill bg-success">@Model.StatusName</span>
            }
            else if (Model.StatusName == "In Progress")
            {
                <span class="badge rounded-pill bg-warning">@Model.StatusName</span>
            }
            else
            {
                <span class="badge rounded-pill bg-danger">@Model.StatusName</span>
            }

            <a asp-route-TaskId="@Model.TaskId" asp-action="UpdateTask" asp-controller="Task" class="btn btn-outline-warning btn-sm rounded-pill">
                Edit
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil" viewBox="0 0 16 16">
                    <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325" />
                </svg>
            </a>
            <button class="btn btn-outline-danger btn-sm rounded-pill open-modal"
               data-id="@Model.TaskId"
               data-filename="@Model.Title"
               data-entity="task">
                Delete
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                    <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z" />
                    <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z" />
                </svg>
            </button>

           @if (@Model.AttachmentsCount > 0) 
            {
                <button type="button" class="badge bg-white text-dark  rounded-pill d-none d-lg-block" 
                onclick="showAttachments(@Model.TaskId)">
                    Show Attatchments
                    @* <span class="badge bg-secondary">
                        @Model.AttachmentsCount
                    </span> *@
                </button>
            }
            

        </strong>
            @Model.Description
        </p>
        
    </div>
    